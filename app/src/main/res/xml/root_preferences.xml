<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/title_theme">
        <SwitchPreferenceCompat
            app:key="@string/key_dark_mode"
            app:summaryOff="@string/summary_off_mode"
            app:summaryOn="@string/summary_on_mode"
            app:title="@string/title_mode" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/title_notification">
        <SwitchPreferenceCompat
            app:key="@string/key_daily_reminder"
            app:summaryOff="@string/summary_off_reminder"
            app:summaryOn="@string/summary_on_reminder"
            app:title="@string/title_reminder" />
    </PreferenceCategory>
</PreferenceScreen>